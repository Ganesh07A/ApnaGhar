<% layout("/layouts/boilerplate") -%>
  <body>
    <h2 class="offset-2">Edit Listing</h2>
    <div class="row">
        <div class="col-8 offset-2">
            <img
            src="<%= listing.image %>"
            class="card-img-top"  id="edit-img"
            alt="listing_image"
            />
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input
                        type="text"
                        name="title"
                        value="<%= listing.title %>"
                        placeholder="Enter Title"
                        class="form-control"
                    />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea
                    type="text"
                    name="description"
                    placeholder="Enter description"
                    class="form-control"
                    ><%= listing.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input
                    type="text"
                    name="image"
                    value="<%= listing.image %>"
                    placeholder="image URL"
                    class="form-control"
                    />
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input
                    type="number"
                    name="price"
                    value="<%= listing.price %>"
                    placeholder="Enter price"
                    class="form-control"/>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="location" class="form-control" value="<%= listing.location %>">
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input
                    type="text"
                    name="country"
                    value="<%= listing.country %>"
                    class="form-control"/>
                </div>
            <button class="btn text-white mb-3">Update</button>
            </form>
        </div>
    </div>
  </body>

